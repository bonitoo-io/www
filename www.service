[Unit]
Description=www
After=network.target

[Service]
Environment=NODE_ENV=production
ExecStart=/bin/bash -c 'source /home/ubuntu/.nvm/nvm.sh && nvm use 22 && cd next &&npm run start'
WorkingDirectory=/home/ubuntu
StandardOutput=inherit
Wants=strapi.service
StandardError=inherit
Restart=always
RestartSec=10s
User=ubuntu

[Install]
WantedBy=multi-user.target
